    },
    "bin": "NeeView.exe",
    "shortcuts": [
        [
            "NeeView.exe",
            "NeeView"
        ]
    ],
    "pre_install": [
        "ensure \"$persist_dir\" | Out-Null",
        "@(",
        "    'UserSetting.json',",
        "    'Bookmark.json',",
        "    'History.json'",
        ") | ForEach-Object {",
        "    $path = \"$persist_dir\\$_\"",
        "    if (!(Test-Path $path)) {",
        "        New-Item $path -ItemType File | Out-Null",
        "    }",
        "}"
    ],
    "persist": [
        "UserSetting.json",
        "Bookmark.json",
        "History.json",
        "Playlists"
    ],
    "checkver": {
        "url": "https://bitbucket.org/neelabo/neeview/wiki/ChangeLog",
        "regex": "<h2 [^>]+>([\\d.]+)</h2>"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://bitbucket.org/neelabo/neeview/downloads/NeeView$version-x64.zip",
                "extract_dir": "NeeView$version-x64"
            },
            "32bit": {
                "url": "https://bitbucket.org/neelabo/neeview/downloads/NeeView$version-x86.zip",
                "extract_dir": "NeeView$version-x86"
            }
        }
    }
}
