{
    "version": "105.0.1",
    "description": "Popular open source web browser with Japanese localization.",
    "homepage": "https://www.mozilla.org/firefox/",
    "license": "MPL-2.0",
    "notes": [
        "To set profile 'Scoop' as *DEFAULT*, or profiles/settings was lost after update:",
        "  - Run 'Firefox Profile Manager', choose 'Scoop' then click 'Start Firefox'.",
        "  - Visit 'about:profiles' page in Firefox to check *DEFAULT* profile.",
        "For details: https://support.mozilla.org/en-US/kb/profile-manager-create-remove-switch-firefox-profiles"
    ],
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/105.0.1/win64/ja/Firefox%20Setup%20105.0.1.exe#/dl.7z",
            "hash": "sha512:0c66c21ca964a6196de366bd086a63cde4b595c702fb684fd54f1a5fd9e8383c85a1f25f4c8baed4274846bb50c44510f6503d3ad1251d565e151b378d401bdd"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/105.0.1/win32/ja/Firefox%20Setup%20105.0.1.exe#/dl.7z",
            "hash": "sha512:5220887a9be5a536a01d8f60ffd84fb1685f6eb4b8bca94cfc7a8b843e319bc81bc41f26255d816c36b31eefa0353d6b163863ca324346c05a28555117a067e3"
        }
    },
    "extract_dir": "core",
    "post_install": [
        "ensure \"$persist_dir\\Profiles\\Scoop\" | Out-Null",
        "firefox -CreateProfile \"Scoop $persist_dir\\Profiles\\Scoop\"",
        "$Addition = \"$persist_dir\\addition\"",
        "if (Test-Path $Addition) {",
        "  info 'Copying additional items...'",
        "  Copy-Item -Path $Addition\\* -Destination $dir -Force -Recurse -ErrorAction SilentlyContinue",
        "}"
    ],
    "bin": "firefox.exe",
    "shortcuts": [
        [
            "firefox.exe",
            "Firefox"
        ],
        [
            "firefox.exe",
            "Firefox Profile Manager",
            "-P"
        ]
    ],
    "persist": [
        "distribution",
        "Profiles"
    ],
    "checkver": {
        "url": "https://www.mozilla.org/en-US/firefox/notes/",
        "regex": "<div class=\"c-release-version\">([\\d.]+)</div>"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win64/ja/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/ja/$basename"
                }
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win32/ja/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win32/ja/$basename"
                }
            }
        }
    }
}
