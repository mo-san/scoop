{
    "version": "0.16a",
    "description": "PiCo: detects similar or duplicate pictures",
    "homepage": "http://xration.sakura.ne.jp/htmls/program.htm",
    "license": "Proprietary",
    "depends": "7zip",
    "url": "http://xration.sakura.ne.jp/images/program/PICO016a.lzh",
    "hash": "ea845e783ff77ff919103a4128c4834fb21fe904d291c28b9b39afe13282c120",
    "bin": "pico.exe",
    "shortcuts": [
        [
            "pico.exe",
            "PiCo"
        ]
    ],
    "pre_install": [
        "ensure \"$persist_dir\" | Out-Null",
        "$path = \"$persist_dir\\settings.ini\"; if (!(Test-Path $path)) { New-Item $path | Out-Null }",

        "if (!(Test-Path \"$persist_dir\\ifjpeg.spi\")) {",
        "  Invoke-WebRequest https://www.digitalpad.co.jp/~takechin/archives/ifjpeg034.zip -OutFile \"$persist_dir\\dl.zip\"",
        "  & \"$(appdir 7zip)\\current\\7z.exe\" e \"$persist_dir\\dl.zip\" -o\"$persist_dir\\\" | Out-Null",
        "  Remove-Item \"$persist_dir\\dl.zip\"",
        "}"
    ],
    "persist": [
        "ifjpeg.spi",
        "ifjpeg.txt",
        "settings.ini"
    ],
    "checkver": {
        "url": "http://xration.sakura.ne.jp/htmls/program.htm",
        "regex": "PiCo\\s+v([\\d\\w.]+)"
    },
    "autoupdate": {
        "url": "http://xration.sakura.ne.jp/images/program/PICO${cleanVersion}.lzh"
    }
}
