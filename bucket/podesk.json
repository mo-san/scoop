{
    "$schema": "https://raw.githubusercontent.com/lukesampson/scoop/master/schema.json",
    "version": "2",
    "description": "Podesk: a virtual desktop switcher with only mouse moves",
    "homepage": "https://forest.watch.impress.co.jp/library/software/podesk/",
    "license": "",
    "depends": "innounp",
    "url": "https://dforest.watch.impress.co.jp/library/p/podesk/12042/Podesk2.zip#/dl.zip",
