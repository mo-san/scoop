    "pre_install": [
        "Move-Item \"$dir\\Podesk2\\*\" \"$dir\\\"",
        "& \"$(appdir innounp)\\current\\innounp.exe\" -q -e \"$dir\\PodeskSetup.exe\" -d\"$dir\" | Out-Null",
        "Remove-Item  \"$dir\\PodeskSetup.exe\", \"$dir\\install_script.iss\", \"$dir\\Podesk2\" -Force -Recurse"
    ],
    "checkver": {
        "url": "https://forest.watch.impress.co.jp/library/software/podesk/",
        "regex": "<dd>v([\\d.]+).*</dd>"
    },
    "autoupdate": {
        "url": "https://dforest.watch.impress.co.jp/library/p/podesk/12042/Podesk${version}.zip#/dl.zip"
    }
}
