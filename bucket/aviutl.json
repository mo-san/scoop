{
    "$schema": "https://raw.githubusercontent.com/lukesampson/scoop/master/schema.json",
    "version": "1.10",
    "description": "Movieclip filter.",
    "homepage": "http://spring-fragrance.mints.ne.jp/aviutl/",
    "license": "Freeware",
    "url": [
        "http://spring-fragrance.mints.ne.jp/aviutl/aviutl110.zip",
        "http://spring-fragrance.mints.ne.jp/aviutl/exedit92.zip"
    ],
    "hash": [
        "5eaff06191b1cc90d9477d432698a56c02c59de9ba161e8718f79a384d212db9",
        "cea425850c5d16b769fcb1d96b18a678d008ff50b11195319c0a4cd97ebb33c1"
    ],
    "bin": "aviutl.exe",
    "shortcuts": [
        [
            "aviutl.exe",
            "AviUtl"
        ]
    ],
    "pre_install": [
        "ensure \"$persist_dir\" | Out-Null",
        "",
        "@(",
        "    'aviutl.ini',",
        "    'aviutl.key',",
        "    'aviutl.sav',",
        "    'デフォルト.cfg',",
        "    'デフォルト.sav'",
        ") | ForEach-Object {",
        "    if (-not (Test-Path \"$persist_dir\\$_\")) {",
        "        New-Item -Path \"$persist_dir\\$_\" -ItemType File | Out-Null",
        "    }",
        "}"
    ],
    "persist": [
        "Plugins",
        "exe_files",
        "x264guiEx_stg",
        "aviutl.ini",
        "aviutl.key",
        "aviutl.sav",
        "デフォルト.cfg",
        "デフォルト.sav"
    ],
    "checkver": {
        "url": "http://spring-fragrance.mints.ne.jp/aviutl/",
        "regex": "<TD>version([0-9.]+)</TD>"
    },
    "autoupdate": {
        "url": "http://spring-fragrance.mints.ne.jp/aviutl/aviutl${cleanVersion}.zip"
    }
}
